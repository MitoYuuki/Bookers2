<div class="col-md-3">
  <h2>User info</h2>
  <% if current_user.present? %>
    <p><%= image_tag current_user.get_profile_image(100,100) %></p>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>name</th>
        <th>demouser</th>
      </tr>
      <tr>
        <th>introduction</th>
      <tr>
    </thead>
  </table>

  <div class="row">
    <%= link_to edit_user_path(current_user), class: "btn btn-block btn-outline-secondary" do %>
      <i class="fas fa-user-cog">
      </i>
    <% end %>
  </div>


  <h2>New book</h2>
  <%= form_with model: @post_image do |f| %>
    <h4>Title</h4>
    <%= f.text_field :shop_name %>
    <h4>Opinion</h4>
    <%= f.text_area :caption %>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>

</div>