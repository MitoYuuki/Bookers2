<div class="container">
  <div class="row">

    <%= render 'shared/sidebar', book: @book || Book.new, display_user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
            <tr class="align-middle">
              <td>
                <% if book.user.present? %>
                  <p>
                    <%= link_to user_path(book.user) do %>
                      <%= image_tag book.user.get_profile_image(80,80) %>
                    <% end %>
                  </p>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book), class: "text-decoration-none" %>
              </td>
              <td>
                <p><%= book.body %></p>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>