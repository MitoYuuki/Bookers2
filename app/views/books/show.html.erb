<div class="container">
  <div class="row">

    <%= render 'shared/sidebar', book: @book || Book.new, display_user:@user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">

          <tbody>
            <tr class="align-middle">
              <td>
                <% if current_user.present? %>
                  <p>
                    <%= link_to user_path(@book.user) do %>
                      <%= image_tag @book.user.get_profile_image(80,80) %>
                    <% end %>
                  </p>
                  <p>
                      <%= link_to @book.user.name, user_path(@book.user), class: "text-decoration-none" %>
                  </p>
                  
                <% end %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book), class: "text-decoration-none" %>
              </td>
              <td>
                <p><%= @book.body %></p>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success mb-1" %><br>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %>
                <% end %>  
              </td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>