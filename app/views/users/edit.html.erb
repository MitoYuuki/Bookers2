<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>User info</h1>

  <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
    <div class="form-group">
      <label for="inputName">Name</label>
      <%= f.text_field :name, class: "form-control name" %>
    </div>

    <div class="form-group">
      <label for="inputImage">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>

    <div class="form-group">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, class: "form-control introduction" %>
    </div>

    <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-secondary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Show", user_path(@user), class: "text-decoration-none me-3" %> |
    <%= link_to "Back", users_path, class: "text-decoration-none" %>
  </div>
</div>