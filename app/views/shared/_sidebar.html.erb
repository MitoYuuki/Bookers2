<div class="col-md-3">
  <% if current_user.present? %>


      <h2>User info</h2>
      <%= image_tag display_user.get_profile_image(100,100), class: "sidebar-profile-img" %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= display_user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
            <td><%= display_user.introduction %></td>
            </tr>
          </tbody>
        </table>


          <div class="row mb-4">
            <div class="col">
              <%= link_to edit_user_path(display_user), class: "btn btn-block btn-outline-secondary" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </div>
          </div>

          <h2>New book</h2>
          <% book_for_form = Book.new %>
          <%= form_with model: book_for_form, local: true do |f| %>
            <div class="form-group">
              <h4>Title</h4>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group">
              <h4>Opinion</h4>
              <%= f.text_area :body, class: "form-control" %>
            </div>

            <%= f.submit 'Create Book', class: "btn btn-success" %>

      <% end %>
  <% end %>
</div>